   "source": [
    "def fatorial(n):\n",
    "    \n",
    "    if n == 0: #se for 0, retorna o caso base, que é 0\n",
    "        return 1\n",
    "    \n",
    "    else:\n",
    "        return n * fatorial(n - 1) #se nao, retorna o n vezes o argumento -1, e a funcao se checa de novo\n",
    "    \n",
    "fatorial(5)"
   ]
  }
